<%- include('./commons/header.ejs') %>
    <div class="am-g myapp-login">
        <div class="myapp-login-logo-block  tpl-login-max">
            <div class="myapp-login-logo-text">
                <div class="myapp-login-logo-text">
                    酷蚁文化<span> 登录</span> <i class="am-icon-skyatlas"></i>
                </div>
            </div>
    
            <div class="login-font">
            </div>
            <div class="am-u-sm-10 login-am-center">
                <form class="am-form">
                    <fieldset>
                        <div class="am-form-group">
                            <input type="text"  name="username" placeholder="输入用户名">
                        </div>
                        <div class="am-form-group">
                            <input type="password"  name="password" placeholder="输入密码">
                        </div>
                        <div class="am-form-group " style="position:relative;">
                            <input type="text"  name="code" placeholder="输入验证码">
                            <img id="code" src="/code"/>
                        </div>
                        <p><button type="button" class="am-btn am-btn-default">登录</button></p>
                    </fieldset>
                </form>
            </div>
        </div>
    </div>
    <script>
        $('.am-btn').click(function(){
            var formData=$('form.am-form').serialize();
            $.ajax({
                url:'/login',
                type:'post',
                data:formData,
                success:function(res){
                    var txt=res.data;
                    var status=res.status;
                    if(status==2){
                        alertModel(txt);
                        setTimeout(function(){
                            window.location.href='/'
                        },1500)
                    }else{
                        alertModel(txt);
                        MathCode();
                    }
                },
                error:function(err){
                    alertModel(err.statusText);
                    MathCode();
                }
            })
        })
        $("#code").click(function(){
            MathCode();
        })

        function MathCode(){
            $("#code").attr('src','/code?id='+Math.random());
        };
    </script>
